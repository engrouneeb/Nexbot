# Database Configuration
DB_SERVER=localhost,1433
DB_NAME=CalimaticChatbotDB
DB_USER=sa
DB_PASSWORD=YourStrong@Password123

# ChromaDB Configuration
CHROMADB_URL=http://localhost:8000
CHROMADB_TENANT=default
CHROMADB_DATABASE=default

# Redis Configuration
REDIS_CONNECTION=localhost:6379

# Blob Storage Configuration (Choose one)
STORAGE_TYPE=local
# For Azure Blob Storage
# AZURE_STORAGE_CONNECTION=DefaultEndpointsProtocol=https;AccountName=...
# For AWS S3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=calimatic-chatbot-storage
# AWS_REGION=us-east-1
# For Local Storage
LOCAL_STORAGE_PATH=/app/storage

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this
JWT_SECRET=your-jwt-secret-key-minimum-32-chars-change-this
JWT_ISSUER=CalimaticChatBot
JWT_AUDIENCE=CalimaticChatBot-API
JWT_EXPIRY_MINUTES=60

# CORS Configuration
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=20
RATE_LIMIT_REQUESTS_PER_HOUR=500
RATE_LIMIT_GLOBAL_PER_MINUTE=1000

# Admin Chatbot (for internal support)
ADMIN_OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL_SIMPLE=gpt-4o-mini
OPENAI_CHAT_MODEL_COMPLEX=gpt-4o
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Application Settings
APP_NAME=CalimaticChatBot
APP_URL=http://localhost:5000
WIDGET_URL=http://localhost:5000/widget/chatbot-widget.js

# Logging
LOG_LEVEL=Information
SERILOG_MINIMUM_LEVEL=Information

# Background Jobs (Hangfire)
HANGFIRE_WORKERS=10
HANGFIRE_DASHBOARD_ENABLED=true
